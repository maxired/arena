<h2>Queues</h2>
<h3>Overview</h3>

<div class="row">
  <div class="no-padding">
    <ul class="list-group">
      {{#each queues}}
        <li class="list-group-item">
          <a href="{{ ../basePath }}/{{ encodeURI this.hostId }}/{{ encodeURI this.name }}">{{ this.hostId }}/{{ this.name }}</a>
          <span>Active {{this.jobCounts.active}}</span>
          <span>Waiting {{this.jobCounts.waiting}}</span>
          <span>Completed {{this.jobCounts.completed}}</span>
          <span>Failed {{this.jobCounts.failed}}</span>
          <span>Delayed {{this.jobCounts.delayed}}</span>
        </li>
      {{/each}}
    </ul>
  </div>
</div>

{{#contentFor 'sidebar'}}
  <li class="active"><a href="#">Queues Overview</a></li>
{{/contentFor}}
